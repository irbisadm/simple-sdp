{
  "compilerOptions": {
    "target": "ES2018",
    "outDir": "build",
    "declaration": true,
    "strict": true,
    "module": "ESNext",
    "noEmitOnError": true,
    "lib": [
      "ES2018",
      "DOM"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "Node"
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}